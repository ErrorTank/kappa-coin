.exchange-form{
  width 500px
  margin auto
  color #6c757e
  .form-header{
    color rgb(13, 53, 120);
    font-size 22px
    font-weight 550
    i{
      margin-right 10px
    }
    margin-bottom 30px
  }
  .form-body{
    .fr{
      .usd-rate-tooltip{
        .tooltip-content{
          width 160px !important
        }
      }
      .separate{
        width 30px
        display inline-block
      }
      .value-present{
        display inline-block
        vertical-align top
        label{
          font-size 18px
          i{
            font-size 20px

            color rgb(13, 53, 120)
          }
        }
        .value{

          .coin-name{
            vertical-align middle
            display inline-block
            font-size 16px
            font-weight 550
            color rgb(13, 53, 120);

          }
          .link{
            .address{
              white-space nowrap
              text-overflow ellipsis
              overflow hidden
            }
            color tikiblue
            font-size 15px
            cursor pointer
            &:hover{
              color darken(tikiblue, 20%)
              text-decoration underline
            }
          }
          img{
            display inline-block
            vertical-align middle
            height 30px
            margin-right 8px
          }
        }
        &:first-of-type{
          width 170px
          .value{
            border 1px solid grey
            border-radius 4px
            padding 8px 15px
          }
        }
        &:last-of-type{
          width calc(100% - 200px)
        }
      }
    }
  }
}