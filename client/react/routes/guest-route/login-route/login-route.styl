
.login-route {
  .login-wrapper {
    width 500px
    margin auto
    margin-top 100px
    color #6c757e

    .login-title-1 {
      color tikiblue
      font-size 26px

      span {
        font-weight 550
      }
    }

    .login-title-2 {
      font-size 16px
    }
    .login-form{
      margin-top 30px
      font-size 16px
      .server-error{
        margin-bottom 15px
        color danger
        font-size 15px
      }
      .btn-login{
        display block
        text-align center
        padding 7px
        position relative
        color white
        background-color tikiblue
        width 100%
        font-size 16px !important
        margin-top 30px !important
      }
      .login-input{
        margin-bottom 16px
        input{
          font-size 16px !important
          padding 8px 15px  !important
        }
      }
    }
  }
}